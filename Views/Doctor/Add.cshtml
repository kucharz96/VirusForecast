@model VirusForecast.Models.DoctorViewModel.AddEditViewModel
@{
    ViewData["Title"] = "Add Doctors";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

@section Title {
    <h1>Create a new doctor account</h1>
}
<hr />
<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            @Html.HiddenFor(Model => Model.EmailConfirmed)
            @*<div class="form-group">
                <label asp-for="EmailConfirmed"></label>
                <input asp-for="EmailConfirmed" class="form-control-sm" />
                <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
            </div>*@

        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ClinicId"></label>
                <select asp-for="ClinicId" class="form-control" asp-items="@Model.Clinics">
                    <option value="-1" selected disabled hidden>--Please select one--</option>
                </select>
                <span asp-validation-for="ClinicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Register</button>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</form>
