@model VirusForecast.Models.DoctorViewModel.AddEditViewModel
@{
    ViewData["Title"] = "Edit doctor";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

@section Title {
    <h1>Edit doctor @Model.Email</h1>
}
<hr />
<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailConfirmed"></label>
                <label><i>(Manual confirmation)</i></label>
                <label class="switch">
                    <input asp-for="EmailConfirmed" type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ClinicId"></label>
                <select asp-for="ClinicId" class="form-control" asp-items="@Model.Clinics">
                    <option>--Please select one--</option>
                </select>
                <span asp-validation-for="ClinicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</form>
<div>
    <a type="button" asp-action="List" class="btn btn-dark">Back to List <i class="fa fa-arrow-left" aria-hidden="true"></i></a>
</div>
