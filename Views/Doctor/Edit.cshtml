@model VirusForecast.Models.DoctorViewModel.AddEditViewModel
@{
    ViewData["Title"] = "Edit doctor";
    Layout = "_Layout";


}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <input type="hidden" asp-for="Id" class="form-control" />

            <h4>Edit account @Model.Email</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailConfirmed"></label>
                <input asp-for="EmailConfirmed" class="form-control-sm" />
                <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClinicId"></label>
                <select asp-for="ClinicId" class="form-control" asp-items="@Model.Clinics">
                    <option>--Please select one--</option>
                </select>
                <span asp-validation-for="ClinicId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}