@using static VirusForecast.Helpers.NavigationIndicatorHelper;

<link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/Home" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">AdminLTE 3</span>
    </a>
    <div class="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">Hi, @User.Identity.Name </a>
                </div>
            </div>
        }
        else
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">Hi, Visitor</a>
                </div>
            </div>
        }
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item ">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("home","index")">
                        <i class="fa fa-home"></i>
                        <p>
                            Home
                        </p>
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Privacy" class="nav-link @Url.MakeActiveClass("home", "privacy")">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                            <p>
                                Privacy
                            </p>
                        </a>
                    </li>
                    @if (this.User.IsInRole(VirusForecast.Models.User.ADMIN_ROLE))
                    {
                        <li class="nav-item ">
                            <a asp-controller="Doctor" asp-action="List" class="nav-link @Url.MakeActiveClass("home", "privacy")">
                                <i class="fa fa-user-md" aria-hidden="true"></i>
                                <p>
                                    Doctors
                                </p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a asp-controller="Clinic" asp-action="List" class="nav-link @Url.MakeActiveClass("home", "privacy")">
                                <i class="fa fa-hospital-o" aria-hidden="true"></i>
                                <p>
                                    Clinics
                                </p>
                            </a>
                        </li>
                    }
                }
                @if (this.User.IsInRole(VirusForecast.Models.User.DOCTOR_ROLE))
                {
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fa fa-cogs" aria-hidden="true"></i>
                            <p>
                                Virus cases
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Virus" asp-action="List" class="nav-link @Url.MakeActiveClass("home", "privacy")">
                                    <i class="fa fa-list" aria-hidden="true"></i>
                                    <p>List</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Virus" asp-action="AddFromFile" class="nav-link @Url.MakeActiveClass("home", "privacy")">
                                    <i class="fa fa-file-text" aria-hidden="true"></i>
                                    <p>Add from file</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Virus" asp-action="Add" class="nav-link @Url.MakeActiveClass("home", "privacy")">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                    <p>Add manually</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
        </nav>
    </div>
</aside>